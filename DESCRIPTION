Package: TestDesign
Type: Package
Title: Optimal Test Design Approach to Fixed and Adaptive Test Construction
Version: 1.6.0
Authors@R: c(
    person("Seung W.", "Choi",
        email = "schoi@austin.utexas.edu",
        role = c("aut", "cre"),
        comment = c(ORCID = "0000-0003-4777-5420")),
    person("Sangdon", "Lim",
        email = "sangdonlim@utexas.edu",
